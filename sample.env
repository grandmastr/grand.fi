# Application Configuration
# Copy this file to .env.local for development

# ---- Required Variables ----

# Base URL for the application
# Used for server-side rendering and API redirects
APP_BASE_URL=http://localhost:3000

# Li.Fi API URL
# The API endpoint for fetching token and chain data
# Default: https://li.quest/v1
NEXT_PUBLIC_LIFI_API_URL=https://li.quest/v1

# WalletConnect Project ID
# Required for WalletConnect integration
# Get one at https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# ---- Optional Variables ----

# Li.Fi API Key (if you have one)
# Can increase rate limits for API requests
NEXT_PUBLIC_LIFI_API_KEY=your_lifi_api_key

# Site URL for MetaMask integration
# Used in MetaMask connection to identify your site
NEXT_PUBLIC_SITE_URL=https://grand.fi

# Widget Integrator name
# Used for analytics and tracking wallet integrations
NEXT_PUBLIC_WIDGET_INTEGRATOR=grand.fi

# Custom RPC endpoints (JSON format)
# Override default RPC endpoints for specific chains
# Example: {"1":"https://eth-mainnet.custom-rpc.com","137":"https://polygon-mainnet.custom-rpc.com"}
NEXT_PUBLIC_CUSTOM_RPCS={}

# ---- Testing Variables ----
# These are only needed for testing environments

# CI flag for test configurations
# CI=true

# Synpress testing configuration
# See .env.synpress for test wallet configurations 